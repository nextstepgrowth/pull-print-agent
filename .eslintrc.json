{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "env": {
    "es2021": true,
    "node": true
  },
  "rules": {
    "padding-line-between-statements": [
      "error",
      { "blankLine": "always", "prev": "method", "next": "method" }
    ]
  }
}
